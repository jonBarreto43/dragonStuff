<aura:component implements="forceCommunity:availableForAllPageTypes" access="global" >
    <p style="font-size:43px;font-style:oblique;font-weight:bold;text-align:center;">WELCOME TO THE TREASURE BANK'S QUEST BOARD!</p>
    <aura:attribute name="loginUp" type="boolean" default="true"/>
    <aura:attribute name="isHero" type="boolean" default="false"/>
    <aura:attribute name="isDragon" type="boolean" default="false"/>
    <aura:attribute name="currentAcc" type="Account"/>
    <aura:attribute name="messages" type="string"/>
    <!--STEP 1: Released event swaps view from login to quest board-->
    <aura:handler name="loginDown" event="c:questBoardEvent" action="{!c.changeLogin}"/>
    <!--STEP 2: Catches the account event and decideds if it's a Hero or Dragon account-->
    <aura:handler name="currentAccGrab" event="c:accEvent" action="{!c.setAcc}"/>
    <!--STEP 1: Changes this Aura If statement-->
    <aura:if isTrue="{!v.loginUp}">
        <c:castleQuestSearch/>
        <aura:set attribute="else">
            <p>{!v.messages}</p>
            <aura:if isTrue="{!v.isHero}">
                <!--STEP 3: Brings Account from parent to child if hero-->
                <c:questBoardHero heroAcc="{!v.currentAcc}"/>
            </aura:if>
            <aura:if isTrue="{!v.isDragon}">
                <!--STEP 3: Brings Account from parent to child if dragon-->
                <c:questBoardDragon dragAcc="{!v.currentAcc}"/>
            </aura:if>
        </aura:set>
    </aura:if>
</aura:component>
